@model System.Collections.Generic.List<int>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h3>Gissa</h3>
    </div>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        <label for="number">Ange nytt tal</label>
        <input type="text" name="number">
        
        <button type="submit">Skicka</button>
    }

    <!--Skriv ut listan-->

    @if(Model != null)
    {
        <ul>
            @foreach(var item in Model)
            {
                <li>@item</li>
            }
        </ul>
    }
</body>
</html>
